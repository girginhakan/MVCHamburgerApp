@model UserViewModel
<!-- contact section start -->
<div class="contact_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <br />
                <h1 class="contact_taital">Kayıt Ekranı</h1><br />
            </div>
        </div>
    </div>
    <form asp-controller="User" asp-action="Register" method="post">
        <div class="container-fluid">
            <div class="contact_section_2">
                <div class="row">
                    <div class="col-md-12">

                        <div class="mail_section_1">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Adınız" ><br />
                            <input asp-for="Surname" type="text" class="form-control" placeholder="Soyadınız"><br />
                            <input asp-for="Email" type="text" class="form-control" placeholder="E-posta"><br />
                            <input asp-for="Password" type="text" class="form-control" placeholder="Şifreniz"><br />
                            <input asp-for="ConfirmPassword" type="text" class="form-control" placeholder="Şifre tekrarı">
                            <br />
                            <div class="send_bt">
                                <button type="submit" class="btn btn-outline-success">Ekle</button>
                                <a asp-controller="Home" asp-action="Index" type="submit" class="btn btn-outline-warning">Geri</a>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </form>

</div>
<!-- contact section end -->